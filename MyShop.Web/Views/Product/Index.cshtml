

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "View Product";
    Layout = "_Dashboard";
}
<a asp-action="Create" asp-controller="Product" class="btn btn-primary mb-3">Add Product</a>

<table id="products-table" class="table table-hover" width="100%">
    <thead>
        <tr>
            <th style="width: 20%;">Name</th>
            <th style="width: 30%;">Description</th>
            <th style="width: 10%;">Price</th>
            <th style="width: 20%;">Category</th>
            <th style="width: 20%;">Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section Scripts{
<script src="~/js/Products.js"></script>
}