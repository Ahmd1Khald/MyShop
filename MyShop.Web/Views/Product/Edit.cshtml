@model ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "_Dashboard";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id"/>
            <input type="hidden" asp-for="Product.Image" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Image" class="control-label"></label>
                <input type="file" name="file" id="file" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId"></label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoryList">
                    <option disabled selected>-- Select Category --</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success">
            </div>


        </form>
    </div>

    <div class="col-md-4">
        <div class="container">
            <img src="~/@Model.Product.Image" width="80%" height="100%"/>
        </div>
    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}